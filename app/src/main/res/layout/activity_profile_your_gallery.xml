<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_your_gallery">

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/blue_comb3"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trans"
            android:fontFamily="@font/timeline"
            android:gravity="center"
            android:padding="3sp"
            android:text="ART HUB"
            android:textColor="@color/black"
            android:textSize="40sp">
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:background="@color/dark_violet"
        app:layout_constraintTop_toBottomOf="@+id/logo">
    </View>

    <LinearLayout
        android:id="@+id/gallery_document_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/gallery_btn_back"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@color/trans"
            android:src="@drawable/left_arrow"
            android:scaleType="fitXY">
        </androidx.appcompat.widget.AppCompatImageButton>

        <TextView
            android:id="@+id/your_gallery_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:fontFamily="@font/timeline"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="YOUR GALLERY"
            android:textColor="@color/light_black"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/your_gallery_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="(0)"
            android:gravity="center"
            android:padding="5sp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/light_black">
        </TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150sp"
        app:layout_constraintTop_toBottomOf="@+id/gallery_document_type">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>
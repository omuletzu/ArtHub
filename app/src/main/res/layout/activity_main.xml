<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/animation_list">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="125sp"
            android:layout_marginTop="25sp"
            android:text="@string/login_appname"
            android:textSize="45sp"
            android:textColor="@color/light_black"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/timeline">
        </TextView>

        <FrameLayout
            android:id="@+id/login_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="40sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/login_background"
                android:gravity="bottom">

                <FrameLayout
                    android:id="@+id/login_temp_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10sp">
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    android:background="#802C3E50"
                    android:layout_gravity="bottom">
                </View>

                <Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_gravity="bottom"
                    android:contentInsetStart="0sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/login_switch1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#0000"
                            android:textColor="@color/light_black"
                            android:fontFamily="@font/timeline"
                            android:textSize="10sp"
                            android:text="LOGIN">
                        </androidx.appcompat.widget.AppCompatButton>

                        <View
                            android:layout_width="3sp"
                            android:layout_height="match_parent"
                            android:background="#802C3E50">
                        </View>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/login_switch2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#0000"
                            android:textSize="10sp"
                            android:textColor="@color/light_black"
                            android:fontFamily="@font/timeline"
                            android:text="REGISTER">
                        </androidx.appcompat.widget.AppCompatButton>

                    </LinearLayout>
                </Toolbar>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
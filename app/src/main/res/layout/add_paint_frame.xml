<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/add_input_text_back">

    <TextView
        android:id="@+id/paint_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/optional"
        android:textColor="@color/light_black"
        android:fontFamily="@font/timeline"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20sp">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/paint_medium_lay"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@+id/paint_text1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="Paint medium"
                android:id="@+id/paint_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:elevation="1sp"
                android:textSize="20sp"
                android:padding="18sp"
                android:background="@drawable/details_background"
                android:fontFamily="@font/timeline">
            </com.google.android.material.textfield.TextInputEditText>
        </ScrollView>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/paint_size_lay"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40sp"
        app:layout_constraintTop_toBottomOf="@+id/paint_medium_lay">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="Dimensions"
                android:id="@+id/paint_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1sp"
                android:textSize="20sp"
                android:padding="18sp"
                android:background="@drawable/details_background"
                android:fontFamily="@font/timeline">
            </com.google.android.material.textfield.TextInputEditText>
        </ScrollView>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/paint_others_lay"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40sp"
        android:paddingBottom="20sp"
        app:layout_constraintTop_toBottomOf="@+id/paint_size_lay">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="Other facts"
                android:id="@+id/paint_other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1sp"
                android:textSize="20sp"
                android:padding="18sp"
                android:background="@drawable/details_background"
                android:fontFamily="@font/timeline">
            </com.google.android.material.textfield.TextInputEditText>
        </ScrollView>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Painting medium"
        android:textColor="@color/light_black"
        android:fontFamily="@font/timeline"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/paint_text1"
        app:layout_constraintBottom_toTopOf="@+id/paint_medium_lay"
        android:padding="20sp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Painting dimensions"
        android:textColor="@color/light_black"
        android:fontFamily="@font/timeline"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/paint_medium_lay"
        android:padding="20sp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other factors"
        android:textColor="@color/light_black"
        android:fontFamily="@font/timeline"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/paint_size_lay"
        android:padding="20sp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>